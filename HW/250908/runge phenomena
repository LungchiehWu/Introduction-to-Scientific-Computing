import numpy as np
import matplotlib.pyplot as plt

def runge_function(x):
    return 1 / (1 + 25 * x**2)

n_points = 11  
x_data = np.linspace(-5, 5, n_points)
y_data = runge_function(x_data)

degree = n_points - 1
coeffs = np.polyfit(x_data, y_data, degree)
p = np.poly1d(coeffs)

plt.figure(figsize=(10, 6))
x_plot = np.linspace(-5, 5, 1000)
plt.plot(x_plot, runge_function(x_plot), 'k-', linewidth=2)
plt.plot(x_data, y_data, 'ro')
plt.plot(x_plot, p(x_plot), 'b--')
plt.show()
